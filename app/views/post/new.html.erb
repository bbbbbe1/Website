
<hr>
<%= form_tag('/create',multipart: true) do %>
    <div class="form-group row">
        <input type="text" class="form-control col-md-12" id="frmTitle" name="title" placeholder="Title" />
    </div>
    <div class="form-group row">
        <textarea class="form-control col-md-12" id="frmContent" name="content" placeholder="Contents" rows="20"></textarea>
    </div>
    <div class="form-group row">
        <input type="file" name="avatar" class="form-control">
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            <a href="/" class="btn btn-default">Go to List</a>
        </div>
        <div class="col-md-2 col-md-offset-8">
            <input type="submit" value="글 작성하기" id="frmSubmit" class="form-control btn btn-success">
        </div>
    </div>
<% end %>
