<hr>
<% if @listPosts.empty? %>
    <h3 class="text-center">No posts yet</h3>
<% else %>
    <table class="table table-hover table-striped">
        <thead>
            <th>Title</th>
            <th>Writer</th>
        </thead>
        <tbody>
            <% @listPosts.each do |onePost| %>
                <tr>
     
                    <td>
                        <%= link_to onePost.title, "show/#{onePost.id}" %>
                    </td>
		    <td>
			<%= onePost.user.nickname%>
		    </td>
                    <td>
                        <%= link_to 'Edit', "/edit/#{onePost.id}", class: "" %>&nbsp;
                        <%= link_to 'Delete', "/destroy/#{onePost.id}", class: "" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
        <tfoot>
            
        </tfoot>
    </table>
<% end %>
