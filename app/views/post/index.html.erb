
<% if @listPost.empty? %>
    <h3 class="text-center">No posts yet!</h3>
<% else %>
    <table class="table table-hover table-striped">
        <thead>
            <th>Title</th>
            <th>Writer</th>
            <th>Views</th>
        </thead>
        <tbody>
            <% @listPost.each do |onePost| %>
                <tr>
                    <td><%= link_to onePost.title, "show/#{onePost.id}" %></td>
		    <td><%= onePost.user.nickname%></td>
               	    <td><%= "#{onePost.impressionist_count} views" %></td>
                </tr>
            <% end %>

        </tbody>

        <tfoot>
            
        </tfoot>
    </table>
  <p><%= will_paginate @listPost, :previous_label => '이전', :next_label => '다음' %></p>
<% end %>

<html>
<head>
<nav class="navbar navbar">
<div class="container">
<ul class="nav navbar-nav navbar-right">
      <a href="/new" style="color:white;  margin-right: 50px;" class="btn btn-success navbar-btn">글쓰기</a>
  </div>
</nav>
</body>
</html>
